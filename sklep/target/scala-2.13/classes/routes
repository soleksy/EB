# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~


#UserController
POST /user/ controllers.UserController.createUser()
GET /user/:id controllers.UserController.getUser(id:Int)
PUT /user/:id controllers.UserController.updateUser(id:Int)
DELETE /user/:id controllers.UserController.deleteUser(id:Int)

#CourseController
POST /course/ controllers.CourseController.createCourse()
GET /course/:id controllers.CourseController.getCourse(id:Int)
PUT /course/:id controllers.CourseController.updateCourse(id:Int)
DELETE /course/:id controllers.CourseController.deleteCourse(id:Int)

#CartController
POST /cart/ controllers.CartController.createCart()
GET /cart/:id controllers.CartController.getCart(id:Int)
PUT /cart/:id controllers.CartController.updateCart(id:Int)
DELETE /cart/:id controllers.CartController.deleteCart(id:Int)

#CategoryController
